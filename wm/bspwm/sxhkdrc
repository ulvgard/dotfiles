#
# bspwm hotkeys
#

# exit bspwm
alt + alt + Escape
	bspc quit

# move focus
alt + {u,i,o,p}
	bspc window --presel {left,down,up,right}

# remove window
alt + shift + c
	bspc window -c

# balance desktop
alt + b
	bspc desktop -B

# floating / fullscreen mode
alt + {s,f}
	bspc window -t {floating,fullscreen}


# Shift window
alt + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

# Shift desktop left,rifht
alt + {comma,period}
	bspc desktop -f {prev,next}

# resize window
alt + shift + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

#change desktop
alt + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

# change monitor
alt + BackSpace
	bspc monitor next -f

# mouse focus
~button1
	bspc pointer -g focus

# mouse resize
alt + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# ???
alt + !button{1-3}
	bspc pointer -t %i %i

#???
alt + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#
alt + Return
	urxvt
alt + d 
	env PATH=/home/tobias/bin/:$PATH dmenu_run -p 'Run:' -l 10 -nb '#222222' -nf '#FF0066' -fn 'snap' -sb '#222222' -sf '#85A3C2'
super + w
	firefox
super + l
	if setxkbmap -query | grep se; then setxkbmap us; else setxkbmap se; fi

# make sxhkd reload its configuration files:
alt + r 
	pkill -USR1 -x sxhkd
